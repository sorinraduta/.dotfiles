################################################################################
##  Module Xwindow                                                            ##
################################################################################

[module/xwindow]
type = internal/xwindow

# Available tags:
#   <label> (default)
format = <label>
format-prefix = "ï”› "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-padding = 4

# Available tokens:
#   %title%
# Default: %title%
label = %title:0:50:...%
label-maxlen = 50

# Used instead of label when there is no window title
# Available tokens:
#   None
label-empty =
label-empty-foreground = ${colors.foreground}
