################################################################################
##  Module Xkeyboard                                                          ##
################################################################################

[module/xkeyboard]
type = internal/xkeyboard

# List of indicators to ignore
#blacklist-0 = num lock
#blacklist-1 = scroll lock

# Available tags:
#   <label-layout> (default)
#   <label-indicator> (default)
format = <label-layout> <label-indicator>
format-prefix = "ï„œ"
format-prefix-foreground = ${colors.primary}
format-spacing = 0

# Available tokens:
#   %layout%
#   %name%
#   %number%
#   %icon%
# Default: %layout%
label-layout = %name%
label-layout-padding = 2
label-layout-foreground = ${colors.foreground}

# Available tokens:
#   %name%
# Default: %name%
# @deprecated, use label-indicator-on
#label-indicator = %name%

# layout-icon-[0-9]+ = layout;icon
# Assign each layout an icon that will be available as %icon% token for the
# <label-layout> tag. The part before ';' will try to match %layout% value.
layout-icon-default = some-icon
layout-icon-0 = ch;C
layout-icon-1 = us;U

# indicator-icon-[0-9]+ = indicator;off icon;on icon
# Provides the content of the %icon% token in label-indicator-*
indicator-icon-default =
indicator-icon-0 = caps lock;-CL;+CL
indicator-icon-1 = scroll lock;;+SL
indicator-icon-2 = num lock;-NL;+NL

# Replaces label-indicator
# Available tokens:
#   %name%
#   %icon%
# Default: %name%
#label-indicator-on = +%name%

# Available tokens:
#   %name%
#   %icon%
# Default: (none)
#label-indicator-off = -%name%

# Replaces label-indicator-* if for specific indicators
# Available tokens:
#   %name%
#   %icon%
label-indicator-on-capslock = "CAPS"
label-indicator-on-capslock-background = ${colors.primary}
label-indicator-on-capslock-padding = 2
label-indicator-on-capslock-margin = 1
label-indicator-off-capslock =
label-indicator-on-numlock = "NUMLK"
label-indicator-on-numlock-background = ${colors.primary}
label-indicator-on-numlock-padding = 2
label-indicator-on-numlock-margin = 1
label-indicator-off-numlock =
label-indicator-on-scrolllock = "SCROLL LOCK"
label-indicator-on-scrolllock-background = ${colors.primary}
label-indicator-on-scrolllock-padding = 2
label-indicator-on-scrolllock-margin = 1
label-indicator-off-scrolllock =
